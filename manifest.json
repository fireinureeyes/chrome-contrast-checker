{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "version": "1.0.2",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_title": "__MSG_name__"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "MacCtrl+Z"
      }
    }
  },
  "permissions" : [
    "activeTab",
    "storage"
  ]
}