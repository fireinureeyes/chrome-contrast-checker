{
  "manifest_version": 3,
  "name": "contrast checker",
  "version": "1.0",
  "description": "The contrast checker shows a heatmap of the contrast ratio between the middle and surrounding pixels.",
  "default_locale": "en",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_title": "contrast checker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "MacCtrl+Z"
      }
    }
  },
  "permissions" : [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}